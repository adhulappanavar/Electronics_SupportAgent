# =============================================================================
# Electronics_SupportAgent - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# REQUIRED: API Keys
# =============================================================================

# OpenAI API Key (Required for LLM operations)
# Get your key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# OPTIONAL: Additional API Keys
# =============================================================================

# Cognee API Key (Optional - for advanced features)
# Get your key from: https://cognee.ai
COGNEE_API_KEY=your_cognee_api_key_here

# =============================================================================
# DATABASE PATHS
# =============================================================================

# LanceDB database path (for vector storage)
LANCEDB_PATH=./lancedb_data

# Manual knowledge database path (for human-validated solutions)
MANUAL_KNOWLEDGE_PATH=./manual_knowledge_db

# Feedback data path (for user feedback and analytics)
FEEDBACK_DATA_PATH=./feedback_data

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Vector dimension for embeddings (384 for all-MiniLM-L6-v2)
VECTOR_DIMENSION=384

# Document chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# OpenAI model settings
MAX_TOKENS=2000
TEMPERATURE=0.7

# =============================================================================
# SERVICE PORTS
# =============================================================================

# LanceDB API service port
LANCEDB_PORT=8000

# Cognee API service port
COGNEE_PORT=9000

# Streamlit web interface port
STREAMLIT_PORT=8505

# n8n workflow port
N8N_PORT=5678

# =============================================================================
# DEBUG AND LOGGING
# =============================================================================

# Enable debug mode (set to 1 for verbose logging)
DEBUG=0

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Number of workers for document processing
NUM_WORKERS=4

# Batch size for embedding generation
EMBEDDING_BATCH_SIZE=32

# Cache size for embeddings (in MB)
CACHE_SIZE=1024

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable HTTPS for production (set to 1 for HTTPS)
USE_HTTPS=0

# CORS origins (comma-separated list)
CORS_ORIGINS=http://localhost:8505,http://127.0.0.1:8505

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Cognee AI memory engine (set to 1 to enable)
ENABLE_COGNEE=1

# Enable manual knowledge learning (set to 1 to enable)
ENABLE_MANUAL_LEARNING=1

# Enable answer validation (set to 1 to enable)
ENABLE_VALIDATION=1

# Enable n8n workflow integration (set to 1 to enable)
ENABLE_N8N=1

# =============================================================================
# BRAND CONFIGURATION
# =============================================================================

# Supported brands (comma-separated)
SUPPORTED_BRANDS=Samsung,LG,Sony,Panasonic,Sharp

# Product categories (comma-separated)
PRODUCT_CATEGORIES=TV,Fridge,Washing_Machine,Speaker,Air_Conditioner

# Document types (comma-separated)
DOCUMENT_TYPES=SOP,FAQ,Manual,Troubleshooting_Guide,User_Guide

# =============================================================================
# EXAMPLE CONFIGURATION FOR DEVELOPMENT
# =============================================================================
# Uncomment and modify these lines for development:

# OPENAI_API_KEY=sk-test-your-test-key-here
# DEBUG=1
# LOG_LEVEL=DEBUG
# ENABLE_COGNEE=0
# ENABLE_N8N=0 